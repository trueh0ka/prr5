<UserControl x:Class="pr5._1.day"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:pr5._1"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="DayName" Text="Date" TextAlignment="Center"/>
        <Image x:Name="image" Source="C:\Users\vipal\Downloads\vopros.png" Margin="0,10,0,10" Grid.Row="1"/>
        <Button Grid.RowSpan="2" Click="Button_Click">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        <Frame x:Name="frame"/>
    </Grid>
</UserControl>
